<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:background="#6671BA">
    <ImageView
        android:id="@+id/result_TXT_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:fontFamily="sans-serif"
        android:layout_margin="15dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        >
        <TextView
            android:id="@+id/result_TXT_city"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather in Tel Aviv"
            android:textSize="30sp"
            android:fontFamily="sans-serif"
            android:textColor="#D1D1D1"
            />

        <ImageView
            android:id="@+id/result_ICN_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/partly_cloudy_dark_color"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/result_TXT_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24 C"
            android:textSize="44sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#D1D1D1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            >


        <LinearLayout
            android:id="@+id/result_LLY_precipitation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#B79297B8"
            android:layout_margin="5dp"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#D1D1D1"
                android:text="Precipitation:"
                android:textSize="18sp"
                />
            <ImageView
                android:id="@+id/result_ICN_Precipitation"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/rain"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/result_TXT_precipitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textSize="18sp"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="#D1D1D1"
                />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/result_LLY_wind"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#B79297B8"
                android:layout_margin="5dp"
                android:padding="5dp"
                >
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="#D1D1D1"
                    android:text="Wind:"
                    android:textSize="18sp"
                    />
                <ImageView
                    android:id="@+id/result_ICN_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/wind"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/result_TXT_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 KMPH"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#D1D1D1"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            >


            <LinearLayout
                android:id="@+id/result_LLY_sun"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#B79297B8"
                android:layout_margin="5dp"
                android:padding="5dp"
                >
                <TextView
                    android:id="@+id/result_TXT_Sunrise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#D1D1D1"
                    android:text="Country"
                    android:textSize="18sp"
                    />
                <ImageView
                    android:id="@+id/result_ICN_Sun"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/sunrise"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/result_TXT_Sunset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#D1D1D1"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/result_LLY_pressure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#B79297B8"
                android:layout_margin="5dp"
                android:padding="5dp"
                >
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="#D1D1D1"
                    android:text="Pressure:"
                    android:textSize="18sp"
                    />
                <ImageView
                    android:id="@+id/result_ICN_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/pressure_icon"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/result_TXT_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 KMPH"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#D1D1D1"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            >


            <LinearLayout
                android:id="@+id/result_LLY_humidity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#B79297B8"
                android:layout_margin="5dp"
                android:padding="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="#D1D1D1"
                    android:text="Humidity:"
                    android:textSize="18sp"
                    />
                <ImageView
                    android:id="@+id/result_ICN_Humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/humidity_icn"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/result_TXT_Humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#D1D1D1"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/result_LLY_feels"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#B79297B8"
                android:layout_margin="5dp"
                android:padding="5dp"
                >
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="#D1D1D1"
                    android:text="Feels like:"
                    android:textSize="18sp"
                    />
                <ImageView
                    android:id="@+id/result_ICN_feels"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/good_icn"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/result_TXT_feels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22 C"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#D1D1D1"
                    />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>